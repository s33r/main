{
    "compilerOptions": {
        "noEmit": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@ehwillows/app.*": [
                "./packages/app/*",
            ],
            "@ehwillows/lib.*": [
                "./packages/lib/*",
            ],
            "@ehwillows/wright.*": [
                "./packages/wright/*",
            ],
        },
    }
}